<style>
  table#pathogenic-variants-table {
    background-color: white;
    border: 1px solid black;
    border-collapse: collapse;
    box-shadow: none;
  }

  table#pathogenic-variants-table td {
    font-size: 9pt;
    text-align: left;
    padding-top: 7px;
    padding-bottom: 7px;
  }
  table#pathogenic-variants-table th {
    font-size: 10pt;
    color: rgb(121, 121, 121);
    text-align: left;
    padding-left: 10px; 
    padding-right: 10px;
    padding-top: 5px;
    padding-bottom: 5px;
  }
  table#pathogenic-variants-table tr:nth-child(odd) {
    border-top: 1px solid rgb(121, 121, 121);
    border-bottom: 1px solid rgb(121, 121, 121);
  }
  
</style>
<div class="component">
  <table class="variants-table" id="pathogenic-variants-table">
      <tr>
        <th>Disease</th>
        <th>Inheritance</th>
        <th>Gene</th>
        <th>Type</th>
        <th>Variant</th>
        <th>Zygosity</th>
        <th>Interpretation</th>
        <th>Notes</th>
      </tr>
      <% for (var i=0 ; i < variants.length; i++) { %> 
        <tr>
          
          <!-- Disease-->
          <td><%= variants[i].diseases %></td>
    
          <!-- Inheritance -->
          <td><%= variants[i].inheritance %></td>
    
          <!-- Gene -->
          <td><%= variants[i].gene %></td>
    
          <!-- Type-->
          <td><%= variants[i].type %></td>
    
          <!-- Variant Column-->
          <td>
              <!-- SNV-->
              <% if(variants[i].type.includes('SNV')) { %>
                <%= variants[i].cDNA %> <br/>
      
                <% if((variants[i].proteinChange !== null) || (variants[i].proteinChange !== undefined) || (!variants[i].proteinChange == '')) { %> 
                  <%= variants[i].proteinChange %>
                <% } %>
                
                <!-- Transcript -->
                <%= variants[i].transcript %>
              <% } %>
              
              <!-- CNV -->
              <% if(variants[i].type.includes('CNV')) { %>
                <%= variants[i].structuralChangeType %><br/>
                <%= variants[i].geneRegion %>
                
                <!-- Transcript -->
                <%= variants[i].transcript %>
              <% } %>
            </td>
    
          <!-- Zygosity -->
          <td><%= variants[i].zygosity %></td>
    
          <!-- Interpretation -->
          <td><%= variants[i].interpretation %></td>
    
          <!-- Notes -->
          <td><%= variants[i].notes %></td>
        </tr>
      <% } %>
    </table>
</div>
